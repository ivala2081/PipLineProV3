# PipLine Treasury System - Coverage Configuration
[run]
source = app
omit =
    */tests/*
    */migrations/*
    */venv/*
    */__pycache__/*
    */node_modules/*
    app/examples/*
    app/scripts/*
branch = True
parallel = True

[report]
precision = 2
show_missing = True
skip_covered = False
sort = Cover
exclude_lines =
    # Standard pragma
    pragma: no cover
    
    # Debug-only code
    def __repr__
    def __str__
    
    # Abstract methods
    raise NotImplementedError
    raise NotImplemented
    
    # Type checking
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:
    
    # Main execution
    if __name__ == .__main__.:
    
    # Defensive programming
    pass
    
    # Logging
    logger.debug
    
[html]
directory = htmlcov
title = PipLine Test Coverage Report

[xml]
output = coverage.xml

