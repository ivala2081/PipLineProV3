# PipLinePro Local Development Environment
# This file is for local development only

# Flask Configuration
FLASK_ENV=development
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production

# Database Configuration (SQLite for local development)
DATABASE_URL=sqlite:///treasury_improved.db

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@pipeline.com

# Redis Configuration (optional for local)
REDIS_ENABLED=false

# Security Configuration (relaxed for local development)
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# CORS Configuration (for React frontend)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/pipeline.log

# Backup Configuration
BACKUP_ENABLED=false
