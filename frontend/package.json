{
  "name": "pipeline-frontend",
  "version": "1.0.0",
  "description": "Modern React frontend for PipLine Treasury System",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "tsc && vite build && npx vite-bundle-analyzer dist",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:strict": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:components": "vitest run src/test/comprehensive-component-tests.test.tsx",
    "test:watch": "vitest --watch",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "performance:audit": "lighthouse http://localhost:3000 --output html --output-path ./performance-audit.html",
    "bundle:size": "npx bundlephobia",
    "bundle:analyze": "npm run build && node scripts/analyze-bundle.js",
    "preload:components": "node scripts/preload-components.js"
  },
